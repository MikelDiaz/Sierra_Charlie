<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="corp.iceland.sierra_charlie.MainActivity"
    android:background="@drawable/ninex">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridLayout"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:text="BIENVENIDO"

            android:textSize="50dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"

            android:layout_row="0"
            android:layout_column="10"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/gridLayout"
            android:layout_alignEnd="@+id/gridLayout" />


        < Button
        android:layout_width="156dp"
        android:layout_height="63dp"
        android:layout_center android:layout_gravity="center"

        android:text="@string/entrar"
        android:textSize="30sp"
        android:textAlignment="center"
        android:id="@+id/btnEntrar"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="11"
        android:layout_rowSpan="4" />

    </GridLayout>

</RelativeLayout>
